import java.util.Scanner;

public class Main {

    // Method to simulate calling an image recognition system
    public static String callImageRecognitionSystem(String imagePath) {
        // Simulate integration with a cloud service or API
        System.out.println("Processing image at path: " + imagePath);
        
        // For demonstration purposes, assume a detected disease
        String disease;
        if (imagePath.contains("leaf_rust")) {
            disease = "Leaf Rust";
        } else if (imagePath.contains("powdery_mildew")) {
            disease = "Powdery Mildew";
        } else if (imagePath.contains("blight")) {
            disease = "Blight";
        } else {
            disease = "Unknown Disease";
        }
        
        System.out.println("Detected disease: " + disease);
        return disease;
    }

    // Method to generate a report based on the detected disease
    public static String generateReport(String disease) {
        StringBuilder report = new StringBuilder();

        // Report header
        report.append("\n=== Crop Disease Detection Report ===\n");
        report.append("-------------------------------------\n");

        // Append disease-specific information
        switch (disease) {
            case "Leaf Rust":
                report.append("Disease: Leaf Rust\n");
                report.append("Treatment: Apply fungicides containing active ingredients like tebuconazole.\n");
                report.append("Prevention: Use resistant crop varieties and practice crop rotation.\n");
                break;
            case "Powdery Mildew":
                report.append("Disease: Powdery Mildew\n");
                report.append("Treatment: Apply sulfur-based fungicides or neem oil.\n");
                report.append("Prevention: Ensure proper air circulation and avoid over-fertilization.\n");
                break;
            case "Blight":
                report.append("Disease: Blight\n");
                report.append("Treatment: Remove and destroy infected plants; apply copper-based fungicides.\n");
                report.append("Prevention: Avoid overhead watering and maintain proper plant spacing.\n");
                break;
            default:
                report.append("Disease: Unknown\n");
                report.append("No specific treatment or prevention information available.\n");
                break;
        }

        // Report footer
        report.append("-------------------------------------\n");
        return report.toString();
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Prompt the user for the image file path
        System.out.print("Enter the image file path: ");
        String imagePath = scanner.nextLine();

        // Call the image recognition system
        String detectedDisease = callImageRecognitionSystem(imagePath);

        // Generate and print the report
        String report = generateReport(detectedDisease);
        System.out.println(report);

        // Close the scanner
        scanner.close();
    }
}
